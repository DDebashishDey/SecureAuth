<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Secure-Auth</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <link rel="stylesheet" href="/stylesheets/profile.css">
  <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
  <body>
    <div>
        <body>
            <main class="container">
              <div class="profile">
                <% if ( user.gender  == 'male') { %>
                  <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRGMzLixE8Etamb2qilufEUO93wKTFqQJYsJMcsg-HN9nhc2rGK" alt="" class="avatar">
                  <% } %>
                  <% if ( user.gender  == 'female') { %>
                    <img src="https://encrypted-tbn1.gstatic.com/images?q=tbn:ANd9GcRhMnBL-HgLxVF0kCr-plqIj1BdLr1HU9ydti6pLg-uOrZt57Tg" alt="" class="avatar">
                  <% } %>
                <p class="">Hello. Hola. Namaste</p>
                <h1>Myself  <%= user.fullname %> </h1>
                <% if (user.profession) { %>
                  <p class="">I am a <%= user.profession %></p>
                <% } %>
                <% if (user.hobby) { %>
                  <p class="">I love <%= user.hobby %></p>
                <% } %>  

                <p>
                  <i class="ri-mail-line"></i>
                  <%= user.email %>
                </p>
                
                <div class="icons">
                  <% if (user.github) { %>
                    <a href=" <%=user.github%> " target="_blank"><i class="bi bi-github"></i></a>
                  <% } %>
                  <% if (user.twitter) { %>
                    <a href=" <%=user.twitter%> " target="_blank"><i class="ri-twitter-x-fill"></i></a>
                  <% } %>  
                  <% if (user.linkedin) { %>
                    <a href=" <%=user.linkedin%> " target="_blank"><i class="bi bi-linkedin"></i></a>
                  <% } %>  
                </div>
              </div>
            </main>
           </body>
    </div>
    <a href="/logout" class="btn btn-danger center-button">logout</a>
  </body>
</html>
